<%- include('./partials/header', {title: 'Profile', path: '/upload/profile'}) %>

<main class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="md:flex">
        <!-- Profile Sidebar -->
        <div class="md:w-1/3 border-r border-gray-100">
          <div class="p-8 text-center">
            <div class="relative mb-6 mx-auto">
              <% if (user.profileImage) { %>
                <div class="relative h-32 w-32 mx-auto">
                  <img src="<%= user.profileImage %>" class="h-32 w-32 object-cover rounded-full border-4 border-primary-100" alt="Profile Image">
                  <div class="absolute bottom-0 right-0 h-8 w-8 bg-primary-600 rounded-full border-2 border-white flex items-center justify-center text-white">
                    <i class="fas fa-camera"></i>
                  </div>
                </div>
              <% } else { %>
                <div class="h-32 w-32 mx-auto bg-gray-200 rounded-full flex items-center justify-center border-4 border-primary-100">
                  <i class="fas fa-user text-gray-400 text-5xl"></i>
                </div>
              <% } %>
            </div>
            
            <h2 class="text-xl font-bold text-gray-800"><%= user.username %></h2>
            <p class="text-gray-600 text-sm mt-1"><%= user.email %></p>
            
            <div class="mt-6 pt-6 border-t border-gray-100">
              <a href="/upload" class="block w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300 mb-3">
                <i class="fas fa-camera mr-2"></i> Change Photo
              </a>
            </div>
          </div>
          
          <!-- Quick stats -->
          <div class="px-8 pb-8">
            <h3 class="font-medium text-gray-700 mb-4">Account Info</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between items-center">
                <span class="text-gray-500">Member Since</span>
                <span class="font-medium"><%= new Date(user.createdAt).toLocaleDateString() %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-500">Last Login</span>
                <span class="font-medium">Today</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Profile Content -->
        <div class="md:w-2/3 p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-user-circle mr-2 text-primary-500"></i>
            Your Profile
          </h2>
          
          <div class="space-y-6">
            <!-- Account Actions Section -->
            <div class="bg-gray-50 p-6 rounded-xl">
              <h3 class="text-lg font-medium text-gray-800 mb-4">Account Actions</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="/gallery" class="flex items-center p-4 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition duration-300">
                  <div class="text-primary-500 mr-4">
                    <i class="fas fa-images text-xl"></i>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-800">My Gallery</h4>
                    <p class="text-sm text-gray-600">View all your uploaded images</p>
                  </div>
                </a>
                
                <a href="/gallery/upload" class="flex items-center p-4 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition duration-300">
                  <div class="text-primary-500 mr-4">
                    <i class="fas fa-cloud-upload-alt text-xl"></i>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-800">Upload Images</h4>
                    <p class="text-sm text-gray-600">Add multiple images to your gallery</p>
                  </div>
                </a>
              </div>
            </div>
            
            <!-- Account Details Section -->
            <div>
              <h3 class="text-lg font-medium text-gray-800 mb-4">Account Details</h3>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700">Username</label>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500">
                      <i class="fas fa-user"></i>
                    </span>
                    <input type="text" value="<%= user.username %>" class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border border-gray-300 text-gray-700 bg-gray-50" readonly>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700">Email</label>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500">
                      <i class="fas fa-envelope"></i>
                    </span>
                    <input type="text" value="<%= user.email %>" class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border border-gray-300 text-gray-700 bg-gray-50" readonly>
                  </div>
                </div>
              </div>
              
              <div class="mt-6 flex justify-end">
                <a href="/auth/logout" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                  <i class="fas fa-sign-out-alt mr-2"></i> Logout
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
